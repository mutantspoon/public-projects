{
  "productName": "Quill",
  "version": "1.0.0",
  "identifier": "com.quill.app",
  "build": {
    "beforeDevCommand": "npm run build --prefix ui",
    "beforeBuildCommand": "npm run build --prefix ui",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Quill",
        "width": 1000,
        "height": 700,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "txt"],
        "name": "Markdown File",
        "description": "Markdown document"
      }
    ]
  }
}
